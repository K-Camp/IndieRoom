<div class="container mt-5 mb-5">
  <div class="card shadow-sm">
    <div class="card-body">
      <h1 class="card-title text-center mb-4">管理者トップページ（投稿一覧）</h1>

      <table class="table table-striped">
        <thead class="table-dark">
          <tr>
            <th scope="col">投稿者</th>
            <th scope="col">ゲーム</th>
            <th scope="col">タイトル</th>
            <th scope="col">投稿日</th>
            <th scope="col">公開状態</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @posts.each do |post| %>
            <tr>
              <td><%= post.user.user_name %></td>
              <td><%= post.game.game_name %></td>
              <td><%= post.post_title %></td>
              <td><%= post.created_at.strftime("%Y/%m/%d %H:%M") %></td>
              <td>
                <% if post.is_public %>
                  <span class="text-success">公開</span>
                <% else %>
                  <span class="text-danger">非公開</span>
                <% end %>
              </td>
              <td><%= link_to "詳細", admin_post_path(post), class: "btn btn-sm btn-secondary" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
