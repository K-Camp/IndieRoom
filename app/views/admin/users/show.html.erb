<div class="container mt-5 mb-5">
  <div class="card shadow-sm p-4">
    <h2 class="mb-4"><i class="fas fa-user-circle mr-2"></i>ユーザ詳細</h2>

    <%# ユーザプロフィールを部分テンプレートで表示 %>
    <%= render "shared/user_profile", user: @user %>

    <hr>

    <%# 管理者用 有効/退会ステータス変更フォーム %>
    <div class="mt-4">
      <h4>アカウント状態の変更</h4>

      <%= form_with(model: [:admin, @user], url: status_admin_user_path(@user), method: :patch, local: true) do |f| %>
        <div class="form-check">
          <%= f.radio_button :is_active, true, id: "user_active", checked: @user.is_active %>
          <%= f.label :is_active, "有効", for: "user_active", class: "form-check-label" %>
        </div>

        <div class="form-check">
          <%= f.radio_button :is_active, false, id: "user_inactive", checked: !@user.is_active %>
          <%= f.label :is_active, "退会", for: "user_inactive", class: "form-check-label" %>
        </div>

        <%= f.submit "更新する", class: "btn btn-primary mt-3" %>
      <% end %>
    </div>
  </div>
</div>
