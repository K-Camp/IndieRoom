<div class="container mt-5 mb-5">
  <h2 class="mb-4">ユーザ一覧</h2>

  <table class="table table-bordered table-striped">
    <thead class="thead-light">
      <tr>
        <th>ID</th>
        <th>名前</th>
        <th>Email</th>
        <th>ステータス</th>
        <th>登録日</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.id %></td>
          <td><%= user.user_name %></td>
          <td><%= user.email %></td>
          <td>
            <% if user.is_active %>
              <span class="text-success">有効</span>
            <% else %>
              <span class="text-danger">退会</span>
            <% end %>
          </td>
          <td><%= user.created_at.strftime("%Y/%m/%d") %></td>
          <td>
            <%= link_to "詳細", admin_user_path(user), class: "btn btn-sm btn-primary" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
