<div class="card shadow p-4">
  <%# 新規登録と更新の場合でリンクを変えられるように %>
  <%= form_with model: @game, url: @game.new_record? ? admin_games_path : admin_game_path(@game), local: true do |f| %>

    <div class="form-group">
      <%= f.label :game_image, "ゲーム画像" %>
      <%= f.file_field :game_image, size: "300x300", class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :game_name, "ゲーム名" %>
      <%= f.text_field :game_name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :genre_id, "ジャンル" %>
      <%= f.collection_select :genre_id, Genre.all, :id, :genre_name, { prompt: "選択してください" }, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :release_date, "発売日" %>
      <%= f.date_field :release_date, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :synopsis, "あらすじ" %>
      <%= f.text_area :synopsis, rows: 6, class: "form-control" %>
    </div>

    <div class="mt-3">
      <%= f.submit class: "btn btn-primary" %>
    </div>

  <% end %>
</div>
