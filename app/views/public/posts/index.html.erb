<div class="container mt-5 mb-5">
  <h2 class="text-center mb-4">投稿一覧</h2>

  <div class="search_form pe-3 mb-3">
    <%= search_form_for @q, url: public_posts_path, class:"row" do |f| %>
      <div class="col-md-4">
        <%= f.search_field :post_title_cont, class:"form-control", placeholder: "ゲーム名検索" %>
      </div>
      <div class="col-md-1">
        <button class="btn btn-outline-success" type="submit">
          <i class="fa-solid fa-magnifying-glass"></i>
        </button>
      </div>
    <% end %>
  </div>

  <% if @posts.any? %>
    <div class="row">
      <% @posts.each do |post| %>
        <div class="col-md-6 mb-4">
          <div class="card shadow-sm h-100">
            <div class="card-body">
              <!-- ゲーム情報 -->
              <h5 class="card-title">
                <strong><%= post.game&.game_name || "不明なゲーム" %></strong>
              </h5>

              <!-- 投稿タイトル -->
              <p class="card-text mb-1"><strong>タイトル：</strong> <%= post.post_title %></p>

              <!-- 評価（★マーク） -->
              <p class="card-text mb-1">
                <strong>評価：</strong>
                <%= "★" * post.score + "☆" * (5 - post.score) %>
              </p>

              <!-- 投稿者・投稿日 -->
              <p class="text-muted mb-3">
                投稿者：<%= post.user.user_name %> |
                投稿日：<%= post.created_at.strftime("%Y/%m/%d %H:%M") %>
              </p>

              <!-- 詳細ボタン -->
              <div class="text-right">
                <%= link_to public_post_path(post), class: "btn btn-primary btn-sm" do %>
                  <i class="fas fa-info-circle"></i> 詳細を見る
                <% end %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <!-- 投稿が存在しない場合 -->
    <div class="alert alert-info text-center">
      まだ投稿がありません。
    </div>
  <% end %>
  <%= paginate @posts %>
</div>
