<div class="container mt-5 mb-5">
  <div class="card shadow-sm p-4">
    <h2 class="mb-4"><i class="fas fa-user-circle mr-2"></i>マイページ</h2>

    <%# ユーザプロフィール %>
    <%= render "shared/user_profile", user: @user %>
  </div>

  <h3 class="mt-5 mb-3">自分の投稿一覧</h3>
  <% if @posts.any? %>
    <div class="list-group">
      <% @posts.each do |post| %>
        <div class="list-group-item mb-3 p-3 shadow-sm">
          <div class="row align-items-center">

            <!-- 画像 -->
            <div class="col-md-4 text-center">
              <% if post.game.game_image.attached? %>
                <%= image_tag post.game.game_image, size: "300x300", class: "img-fluid rounded" %>
              <% else %>
                <%= image_tag "no_image.png", size: "300x300", class: "img-fluid rounded", alt: "No image" %>
              <% end %>
            </div>

            <div class="col-md-8 mb-4">
              <div class="card shadow-sm h-100">
                <!-- ゲーム情報 -->
                <div class="card-body">
                  <h5 class="card-title"><strong>ゲーム：</strong> <%= post.game.game_name %></h5>
                  <p><strong>評価：</strong> <%= "★" * post.score %></p>
                  <p><strong>タイトル：</strong> <%= post.post_title %></p>
                  <p>
                    <strong>公開状態：</strong>
                    <% if post.is_public %>
                      <span class="text-success">公開</span>
                    <% else %>
                      <span class="text-danger">非公開</span>
                    <% end %>
                  </p>
                  <small class="text-muted">投稿日：<%= post.created_at.strftime("%Y/%m/%d %H:%M") %></small>
                </div>

                <!-- 詳細ボタン -->
                <div class="col-md-2 mb-4">
                  <%= link_to '詳細', public_post_path(post), class: "btn btn-primary" %>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p>まだレビューはありません。</p>
  <% end %>
</div>
