<div class="container mt-4">
  <h2 class="mb-4 text-center">新規レビュー投稿</h2>

  <%= form_with model: @post, local: true do |f| %>
    <!-- ゲーム選択 -->
    <div class="form-group mb-3">
      <%= f.label :game_id, "レビューするゲームを選択" %>
      <%= f.collection_select :game_id, @games, :id, :game_name, { prompt: "選択してください" }, class: "form-control col-4" %>
    </div>

    <!-- 評価 -->
    <div class="form-group mb-3">
      <%= f.label :score, "評価" %><br>
      <% (1..5).each do |i| %>
        <%= f.radio_button :score, i, id: "score_#{i}" %>
        <%= label_tag "score_#{i}", i %>
      <% end %>
    </div>

    <!-- タイトル -->
    <div class="form-group mb-3">
      <%= f.label :post_title, "タイトル" %>
      <%= f.text_field :post_title, class: "form-control col-4" %>
    </div>

    <!-- 感想 -->
    <div class="form-group mb-3">
      <%= f.label :content, "感想" %>
      <%= f.text_area :content, rows: 5, class: "form-control" %>
    </div>

    <div class="form-group mt-4">
      <%= f.submit "投稿する", class: "btn btn-success px-4" %>
    </div>
  <% end %>
</div>
