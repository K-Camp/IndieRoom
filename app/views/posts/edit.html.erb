<div class="container mt-4">
  <h2 class="mb-4 text-center">レビュー編集</h2>

  <%= form_with model: @post, local: true do |f| %>
    
    <!-- ゲーム名と画像（表示のみ） -->
    <% if @post.game.game_image.attached? %>
      <div class="mb-3 text-center">
        <%= image_tag @post.game.game_image, size: "300x300", class: "img-thumbnail" %>
      </div>
    <% end %>

    <div class="mb-3">
      <strong>ゲームタイトル：</strong> <%= @post.game.game_name %>
    </div>

    <!-- 評価 -->
    <div class="form-group mb-3">
      <%= f.label :score, "評価" %><br>
      <% (1..5).each do |i| %>
        <%= f.radio_button :score, i, id: "score_#{i}" %>
        <%= label_tag "score_#{i}", i %>
      <% end %>
    </div>

    <!-- タイトル -->
    <div class="form-group mb-3">
      <%= f.label :post_title, "タイトル" %>
      <%= f.text_field :post_title, class: "form-control col-4" %>
    </div>

    <!-- 感想 -->
    <div class="form-group mb-3">
      <%= f.label :content, "感想" %>
      <%= f.text_area :content, rows: 5, class: "form-control" %>
    </div>

    <div class="form-group mt-4">
      <%= f.submit "更新する", class: "btn btn-primary px-4" %>
    </div>
  <% end %>
</div>
