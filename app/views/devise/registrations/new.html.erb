<div class="container mt-5 mb-5" style="max-width: 500px;">
  <div class="card shadow-sm">
    <div class="card-body">
      <h2 class="text-center mb-4"><i class="fas fa-user-plus mr-2"></i>新規登録</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <% if resource.errors.any? %>
          <div class="alert alert-danger">
            <ul class="mb-0">
              <% resource.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-group mb-3">
          <%= f.label :name, "ユーザー名" %>
          <%= f.text_field :name, class: "form-control", autofocus: true %>
        </div>

        <div class="form-group mb-3">
          <%= f.label :email, "メールアドレス", class: "form-label" %>
          <%= f.email_field :email, autofocus: true, class: "form-control" %>
        </div>

        <div class="form-group mb-3">
          <%= f.label :password, "パスワード", class: "form-label" %>
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
        </div>

        <div class="form-group mb-4">
          <%= f.label :password_confirmation, "パスワード確認", class: "form-label" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
        </div>

        <div class="d-grid">
          <%= f.submit "登録する", class: "btn btn-primary btn-block" %>
        </div>
      <% end %>

      <div class="text-center mt-3">
        <%= link_to "すでにアカウントをお持ちの方はこちら", new_session_path(resource_name), class: "text-decoration-none" %>
      </div>
    </div>
  </div>
</div>

