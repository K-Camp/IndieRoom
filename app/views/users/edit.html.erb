<div class="container mt-5 mb-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card shadow">
        <div class="card-header bg-primary text-white text-center">
          <h4>プロフィール編集</h4>
        </div>

        <div class="card-body">
          <%= form_with model: @user, local: true, url: user_path(@user), method: :patch do |f| %>

            <!-- ユーザー名 -->
            <div class="form-group">
              <%= f.label :user_name, "ユーザー名" %>
              <%= f.text_field :user_name, class: "form-control" %>
            </div>

            <!-- メールアドレス -->
            <div class="form-group mt-3">
              <%= f.label :email, "メールアドレス" %>
              <%= f.email_field :email, class: "form-control" %>
            </div>

            <!-- 自己紹介 -->
            <div class="form-group mt-3">
              <%= f.label :introduction, "自己紹介" %>
              <%= f.text_area :introduction, rows: 3, class: "form-control" %>
            </div>

            <!-- プロフィール画像 -->
            <div class="form-group mt-3">
              <%= f.label :profile_image, "プロフィール画像" %>
              <%= f.file_field :profile_image, class: "form-control-file" %>
              <% if @user.profile_image.present? %>
                <div class="mt-2 text-center">
                  <%= image_tag @user.profile_image, alt: "プロフィール画像", class: "rounded-circle", width: 100 %>
                </div>
              <% end %>
            </div>

            <!-- ボタン（更新 + 退会） -->
            <div class="d-flex justify-content-center mt-4">
              <%= f.submit "更新する", class: "btn btn-success mr-4" %>

              <%= link_to "退会する",
                          withdraw_user_path,
                          method: :patch,
                          data: { confirm: "本当に退会しますか？" },
                          class: "btn btn-danger" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
