<div class="container mt-5 mb-5">
  <div class="card shadow-sm p-4">
    <h2 class="mb-4"><i class="fas fa-user-circle mr-2"></i> マイページ</h2>

    <div class="mb-3">
      <strong>ユーザー名：</strong> <%= current_user.user_name %>
    </div>
    <div class="mb-3">
      <strong>メールアドレス：</strong> <%= current_user.email %>
    </div>

    <% if current_user.introduction.present? %>
      <div class="mb-3">
        <strong>自己紹介</strong>
        <p><%= current_user.introduction %></p>
      </div>
    <% end %>

    <div class="col-3">
      <%= link_to edit_user_path(current_user), class: "btn btn-outline-primary" do %>
        <i class="fas fa-user-edit mr-2"></i> 編集する
      <% end %>
    </div>
  </div>

  <h3 class="mt-5 mb-3">投稿レビュー一覧</h3>

  <% if @posts.any? %>
    <div class="list-group">
      <% @posts.each do |post| %>
        <div class="list-group-item mb-2 p-3 shadow-sm">
          <strong>ゲーム：</strong> <%= post.game.game_name %><br>
          <strong>評価：</strong> <%= "★" * post.score %> <br>
          <strong>タイトル：</strong> <%= post.post_title %> <br>
          <strong>感想：</strong> <%= post.content %> <br>
          <small class="text-muted">投稿日：<%= post.created_at.strftime("%Y/%m/%d %H:%M") %></small>

          <!-- 編集・削除ボタン -->
          <div class="mt-2">
            <%= link_to edit_post_path(post), class: "btn btn-sm btn-outline-primary mr-2" do %>
              <i class="fas fa-edit mr-1"></i> 編集
            <% end %>

            <%= link_to post_path(post), method: :delete, data: { confirm: "本当に削除しますか？" }, class: "btn btn-sm btn-outline-danger" do %>
              <i class="fas fa-trash-alt mr-1"></i> 削除
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p>まだレビューはありません。</p>
  <% end %>

</div>
